    <meta name="theme-color" content="#33AF79" />
    <title>Oliver Ohrt</title>
    <style>
      html, body {
        margin: 0;
        padding: 0;
        height: 100%;
        overflow: hidden;
      }

      body {
        color: white;
        font-family: system-ui, sans-serif;
      }

      .scroll-container {
        height: 100vh;
        overflow-y: auto;
        overscroll-behavior: none;
      }

      .bg-frame {
        width: 100%;
        background-size: 100% auto;
        background-repeat: no-repeat;
        background-position: center top;
      }

      .bg-frame-1 {
        background: linear-gradient(to bottom, #6DCBA0 0%, #33AF79 45%, #33AF79 100%);
        aspect-ratio: 1920 / 1080;
        position: relative;
      }

      .bg-frame-1::before {
        content: "";
        position: absolute;
        top: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 69%;
        height: 100%;
        background: linear-gradient(180deg, #6DCBA0 0%, #33AF79 57%);
      }

      .bg-frame-1::after {
        content: "";
        position: absolute;
        inset: 0;
        background: url("/frame1.svg") center top / 100% auto no-repeat;
      }

      .bg-frame-2 {
        background-color: #33AF79;
        background-image: url("/frame2.svg");
        background-size: 100% auto;
        background-repeat: repeat-y;
        background-position: center top;
        min-height: 200vh;
      }

      main {
        position: relative;
        z-index: 1;
        padding: 20vh 10%;
      }

      h1 {
        font-size: 4rem;
        margin-bottom: 1rem;
      }

      p {
        font-size: 1.5rem;
        line-height: 1.6;
        max-width: 800px;
      }

      /* Color slider overlay */
      .color-slider {
        position: fixed;
        bottom: 24px;
        right: 24px;
        z-index: 100;
        background: rgba(0, 0, 0, 0.6);
        backdrop-filter: blur(12px);
        border-radius: 12px;
        padding: 16px 20px;
        display: flex;
        flex-direction: column;
        gap: 10px;
        font-size: 13px;
        color: white;
        user-select: none;
        transition: opacity 0.2s, transform 0.2s;
      }

      .color-slider.hidden {
        opacity: 0;
        transform: translateY(8px) scale(0.95);
        pointer-events: none;
      }

      .color-slider__header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 12px;
      }

      .color-slider__label {
        font-weight: 600;
        letter-spacing: 0.02em;
      }

      .color-slider__swatch {
        width: 24px;
        height: 24px;
        border-radius: 6px;
        border: 2px solid rgba(255, 255, 255, 0.3);
        background: #33AF79;
        flex-shrink: 0;
      }

      .color-slider__range {
        -webkit-appearance: none;
        appearance: none;
        width: 200px;
        height: 8px;
        border-radius: 4px;
        outline: none;
        background: linear-gradient(to right,
          hsl(0, 55%, 44%),
          hsl(60, 55%, 44%),
          hsl(120, 55%, 44%),
          hsl(180, 55%, 44%),
          hsl(240, 55%, 44%),
          hsl(300, 55%, 44%),
          hsl(360, 55%, 44%)
        );
      }

      .color-slider__range::-webkit-slider-thumb {
        -webkit-appearance: none;
        width: 18px;
        height: 18px;
        border-radius: 50%;
        background: white;
        cursor: pointer;
        box-shadow: 0 1px 4px rgba(0, 0, 0, 0.3);
      }

      .color-slider__range::-moz-range-thumb {
        width: 18px;
        height: 18px;
        border-radius: 50%;
        background: white;
        cursor: pointer;
        border: none;
        box-shadow: 0 1px 4px rgba(0, 0, 0, 0.3);
      }

      .color-slider__degrees {
        font-variant-numeric: tabular-nums;
        opacity: 0.7;
        min-width: 36px;
        text-align: right;
      }

      .color-slider__toggle {
        position: fixed;
        bottom: 24px;
        right: 24px;
        z-index: 99;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        border: 2px solid rgba(255, 255, 255, 0.3);
        background: rgba(0, 0, 0, 0.5);
        backdrop-filter: blur(8px);
        color: white;
        font-size: 18px;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: opacity 0.2s;
      }
    </style>
  </head>

  <body>
    <div class="scroll-container" id="scroll-container">
      <div class="bg-frame bg-frame-1"></div>
      <div class="bg-frame bg-frame-2"></div>
    </div>

    <div class="color-slider" id="color-slider">
      <div class="color-slider__header">
        <span class="color-slider__label">Hue Shift</span>
        <div class="color-slider__swatch" id="color-swatch"></div>
      </div>
      <div style="display: flex; align-items: center; gap: 10px;">
        <input
          type="range"
          class="color-slider__range"
          id="hue-range"
          min="0"
          max="360"
          value="0"
        />
        <span class="color-slider__degrees" id="hue-degrees">0°</span>
      </div>
    </div>

    <button class="color-slider__toggle" id="color-toggle" style="display: none;" aria-label="Show color slider">&#9672;</button>

    <script>
      const container = document.getElementById("scroll-container") as HTMLElement;
      const slider = document.getElementById("color-slider") as HTMLElement;
      const toggle = document.getElementById("color-toggle") as HTMLElement;
      const range = document.getElementById("hue-range") as HTMLInputElement;
      const degrees = document.getElementById("hue-degrees") as HTMLElement;
      const swatch = document.getElementById("color-swatch") as HTMLElement;

      // Base hue of #33AF79 is ~154°
      const BASE_HUE = 154;

      range.addEventListener("input", () => {
        const val = parseInt(range.value);
        container.style.filter = val === 0 ? "" : `hue-rotate(${val}deg)`;
        degrees.textContent = `${val}°`;

        const newHue = (BASE_HUE + val) % 360;
        swatch.style.background = `hsl(${newHue}, 55%, 44%)`;
      });

      toggle.addEventListener("click", () => {
        slider.classList.remove("hidden");
        toggle.style.display = "none";
      });

      slider.addEventListener("dblclick", () => {
        slider.classList.add("hidden");
        toggle.style.display = "flex";
      });
    </script>
  </body>
</html>
