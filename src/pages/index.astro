      }

      .bg-frame-1::before {
        content: "";
        position: absolute;
        top: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 69%;
        height: 100%;
        background: linear-gradient(180deg, #74BF9E 0%, #429E76 57%);
      }

      .bg-frame-1::after {
        content: "";
        position: absolute;
        inset: 0;
        background: url("/frame1.svg") center top / 100% auto no-repeat;
      }

